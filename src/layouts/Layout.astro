---
export interface Props {
    title: string;
}

const { title } = Astro.props;
import NavBar from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import SplineModal from '../components/SplineModal';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <script is:inline>
            // ☝️ This script prevent the FART effect.
             const getTheme = () => localStorage.getItem("theme") || "light";
            const setTheme = (theme) =>
                document.documentElement.setAttribute("data-theme", theme);
            if (localStorage.getItem("theme") === null) {
                document.documentElement.setAttribute("data-theme", "autumn");
            } else {
                document.documentElement.setAttribute(
                    "data-theme",
                    localStorage.getItem("theme")
                );
            }
             document.addEventListener("astro:after-swap", () => setTheme(getTheme()))
        </script>
        <script>
            import { themeChange } from "theme-change";
            themeChange();
        </script>
        <ViewTransitions/>
        <title>{title}</title>
    </head>
    <body class="container relative min-h-screen max-w-screen-md mx-auto">
        <NavBar />
        <main class="py-20">
            <slot />
        </main>
        <Footer/>
    </body>
</html>

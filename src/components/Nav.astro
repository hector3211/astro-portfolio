---
import ToggleThemeButton from "../components/ToggleTheme";
import MobileMenu from "../components/MobileMenu";
import { Icon } from 'astro-icon'
import Themebutton from "../components/Themebutton.astro"
---

<nav
    class="z-50 py-4 w-full container lg:max-w-screen-md items-center bg-opacity-60 backdrop-blur-md fixed top-0"
>
    <div class="flex justify-between items-center">
        <div class="hidden md:flex md:justify-start md:pl-3 md:items-end  md:space-x-5 md:font-medium">
            <a
                href="/"
                class="text-2xl font-bold hover:scale-95 active:scale-105"
            >
                Hector Oropesa
            </a>
            <div class="flex space-x-3">
                <a
                    href="/"
                    class="hover:link hover:scale-95 active:scale-105"
                    data-tip="Home"
                >
                    Home
                </a>
                <a
                    href="https://github.com/hector3211"
                    target="_blank"
                    class="hover:link hover:scale-95 active:scale-105 px-1"
                    data-tip="Github"
                >
                    Github
                </a>
                <a
                    href="https://github.com/hector3211/astro-portfolio"
                    target="_blank"
                    class="hover:link hover:scale-95 active:scale-105 flex items-center space-x-1"
                    data-tip="Source"
                >
                    <p>Source</p>
                    <Icon name="gridicons:external" 
                        class="h-4 w-4 pointer-events-none hover:scale-95"
                    />
                </a>
            </div>
        </div>
        <a
            href="/"
            class="text-2xl font-bold hover:scale-95 active:scale-105 block md:hidden"
        >
            Hector Oropesa
        </a>
        <div class="flex">
            <ToggleThemeButton client:load/>
            <MobileMenu client:load />
        </div>
    </div>
</nav>
